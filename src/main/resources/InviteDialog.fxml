<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="battleships.InviteDialogController"
            style=" -fx-background-image: url('images/download.jpg'); -fx-background-size: cover; -fx-border-color: white; -fx-border-width: 2; -fx-border-radius: 10;"
            prefWidth="500" prefHeight="300">

    <VBox alignment="CENTER" spacing="20" prefWidth="500" prefHeight="300">

        <Region/>
        <Region/>
        <Label text="^^ invited you to play. Do you want to join their game?"
               style="-fx-font-size: 30px; -fx-text-fill: white; -fx-font-weight: bold; -fx-text-alignment: center;"
               wrapText="true" maxWidth="450"/>

        <Region/>
        <HBox alignment="CENTER" spacing="80">
            <Button fx:id="btnDecline" style="-fx-background-color: transparent;">
                <graphic>
                    <ImageView fitWidth="90" fitHeight="100">
                        <Image url="@images/yes.png"/>
                    </ImageView>
                </graphic>
            </Button>

            <Button fx:id="btnAccept" style="-fx-background-color: transparent;">
                <graphic>
                    <ImageView fitWidth="90" fitHeight="100">
                        <Image url="@images/no.png"/>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>
    </VBox>
</AnchorPane>
